# Linux version of update command
alias update='sudo gem update; sudo apt-get update; sudo apt-get upgrade -y; npm update npm -g --quiet; npm update -g --silent;'

# Linux version of emptytrash
alias emptytrash='rm -rf ~/.local/share/Trash/files/*'

# for piping text to clipboard, requires xclip
alias clip='xclip -sel clip'

# source Z from Linux install location
source /usr/local/etc/z/z.sh

# make title of terminal tab the current directory's name
# pwd | sed 's:/:\\
# :g' | tail -n 1
# => pwd, sed replace / for literal newline, tail take last line
export PS1="\[\e]0;\$(pwd | sed 's:/:\\
:g' | tail -n 1)\a\]$PS1"
